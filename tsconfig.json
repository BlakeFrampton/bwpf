{
  "compilerOptions": {
    "target": "es2015",                // Use ES2015 features like Set, Map, etc.
    "lib": ["es2015", "dom"],          // Include DOM types for browser support
    "module": "esnext",                // Modern module system (can use "commonjs" if using Node)
    "outDir": "falling-sand",          // Output folder for compiled JS
    "rootDir": "falling-sand",                    // Root of your source files
    "strict": true,                    // Enable all strict type-checking options
    "esModuleInterop": true,          // Allow compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
  },
  "include": ["falling-sand/**/*.ts"],  // Only include your TypeScript files
  "exclude": ["node_modules"]           // Ignore dependencies
}
